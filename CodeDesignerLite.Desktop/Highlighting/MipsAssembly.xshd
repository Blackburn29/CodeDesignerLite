<?xml version="1.0"?>
<SyntaxDefinition name="MipsAssembly" extensions=".asm;.s;.txt;.cds" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">

  <!-- Define colors matching Form1.cs lines 81-103 -->
  <Color name="Comment" foreground="#8E9297" fontStyle="italic" />
  <Color name="Instruction" foreground="#DCDDDE" />
  <Color name="Directive" foreground="#64DC64" fontWeight="bold" />
  <Color name="DirectivePrintImport" foreground="#B478D2" />
  <Color name="DirectiveHexFloat" foreground="#ADD8E6" />
  <Color name="RegisterA" foreground="#50A7EE" />
  <Color name="RegisterT" foreground="#E6AADC" />
  <Color name="RegisterV" foreground="#FA776D" />
  <Color name="RegisterS" foreground="#F1C40F" />
  <Color name="RegisterSP" foreground="#F5AB35" />
  <Color name="RegisterRA" foreground="#E74C3C" />
  <Color name="RegisterF" foreground="#77DD77" />
  <Color name="RegisterGP" foreground="#2ECC71" />
  <Color name="RegisterK" foreground="#9B59B6" />
  <Color name="RegisterAT" foreground="#ADD8E6" />
  <Color name="RegisterZero" foreground="#808080" />
  <Color name="RegisterFP" foreground="#DCDCAA" />
  <Color name="RegisterOther" foreground="#4FC1FF" />
  <Color name="Label" foreground="#F1C83C" fontWeight="bold" />
  <Color name="BasicLabel" foreground="#D3B06E" />
  <Color name="Number" foreground="#DCDDDE" />
  <Color name="DollarHex" foreground="#D4D4D4" />
  <Color name="String" foreground="#DCDDDE" />

  <!-- Main ruleset -->
  <RuleSet ignoreCase="true">

    <!-- Comments (highest priority) -->
    <Span color="Comment" multiline="true">
      <Begin>/\*</Begin>
      <End>\*/</End>
    </Span>
    <Span color="Comment">
      <Begin>//</Begin>
    </Span>
    <Span color="Comment">
      <Begin>\#</Begin>
    </Span>

    <!-- Strings -->
    <Span color="String">
      <Begin>"</Begin>
      <End>"</End>
      <RuleSet>
        <Span begin="\\" end="." />
      </RuleSet>
    </Span>

    <!-- Labels: FNC prefix gets special coloring -->
    <Rule color="Label">
      ^\s*FNC\w*:
    </Rule>
    <Rule color="BasicLabel">
      ^\s*\w+:
    </Rule>

    <!-- Dollar hex values (e.g., $FF00) -->
    <Rule color="DollarHex">
      \$[0-9a-fA-F]+\b
    </Rule>

    <!-- Hex numbers (e.g., 0xFF00) -->
    <Rule color="Number">
      \b0x[0-9a-fA-F]+\b
    </Rule>

    <!-- Decimal and floating point numbers -->
    <Rule color="Number">
      (?&lt;![\w.:$])\-?\d+(?:\.\d+)?(?:[eE][+-]?\d+)?\b
    </Rule>

    <!-- Registers (specific coloring per register type) -->
    <!-- Zero register -->
    <Keywords color="RegisterZero">
      <Word>zero</Word>
      <Word>$zero</Word>
      <Word>0</Word>
      <Word>$0</Word>
    </Keywords>

    <!-- AT register -->
    <Keywords color="RegisterAT">
      <Word>at</Word>
      <Word>$at</Word>
      <Word>1</Word>
      <Word>$1</Word>
    </Keywords>

    <!-- V registers (v0, v1) -->
